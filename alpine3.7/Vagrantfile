# -*- mode: ruby -*-
# vi: set ft=ruby :

Vagrant.configure(2) do |config|
    config.vm.define 'alpine37' do |alpine|
        alpine.vm.box = 'chriswayg/alpine-3.7-x86_64'
        alpine.vm.box_version = '3.7.0'
        alpine.vm.provider 'virtualbox' do |vb|
            vb.name = 'alpine3.7'
            vb.cpus = 1
            vb.memory = 1024
            vb.customize [
                'modifyvm', :id,
                '--natdnshostresolver1', 'on',
                '--nic1', 'nat',
                '--cableconnected1', 'on'
            ]
        end
    end
end
